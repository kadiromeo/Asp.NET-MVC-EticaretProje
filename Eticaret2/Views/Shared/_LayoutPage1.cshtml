<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.min.js"></script>
    <link href="~/Scripts/jquery.rateyo.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.rateyo.min.js"></script>
    <script src="https://kit.fontawesome.com/3b46233d75.js" crossorigin="anonymous"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container">
        <div>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="/Home/Index">E-Ticaret</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="/Home/Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            @Html.Action("Sepet1", "Kart")
                        </li>
                        @if (Session["Email"] != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Oturum/SiparisDurum/">Siparişlerim</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Oturum/ProfilGuncelle/">@Session["Email"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Oturum/Cikis">Çıkış</a>
                            </li>
                            if (Convert.ToInt32(Session["Rol"]) == 1)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="/Admin/Index">Admin Panel</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Oturum/Giris">Giriş</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Oturum/Kayit">Kayıt</a>
                            </li>
                        }

                    </ul>
                    @Html.Partial("Arama")
                </div>
            </nav>
        </div>


        <div class="mt-5">
            <div class="row">
                @RenderBody()

            </div>
        </div>

        <div class="footer mt-5">
            <p class="bg-dark text-white">From By Kadir YOLCU</p>
        </div>
    </div>
</body>
</html>
